$(function () {

    $('[data-action=modal]').on('click', function () {
        const item = $(this).parents('.js-product').data('item');

        if (item) {
            const html = `<a title="${item.name}" href="${item.url}" class="category__product-image-block">
                <img src="${item.picture}" alt="${item.name}" class="category__product-image">
            </a>
            <div class="category__product-info-block">
                <div class="category__product-left">
                    <p class="category__product-category color-text-gray">${item.section}</p>
                    <a href="#" class="category__product-title">${item.name}</a>
                    <p class="category__product-description">${item.chars}</p>
                </div>
            </div>`;

            $('[data-product-info]').html(html).show();
            $('[data-modal=price] [name=PRODUCT]').val(item.id);
        }

        const openModalName = $(this).data('open-modal');
        const $modal = $(`.modal[data-modal=${openModalName}]`);

        $modal.fadeIn('fast');
        $modal.css('display', 'flex');

        return false;
    })
})
/* End */
